#include <stdio.h>

int main()
{
    int arr[100],i,key,n,f=0,l,mid;
    printf(" enter no. of element\n");
    scanf("%d",&n);
    printf(" enter array elements\n");
    for( i=0;i<n;i++)
        {
            scanf("%d",&arr[i]);
        }

    printf("enter element to search\n");
    scanf("%d", &key);
    l= n-1;
    while(f<=l)
    {
        mid=(f+l)/2;
        if(arr[mid]==key)
        {
            printf("element found at %d", mid+1);
            break;
        }
        else if(arr[mid]<key)
        {
            f=mid+1;
        }
        else
            l=mid-1;
    }
    if(f>l)
        printf("element not found ");
    return 0;
}
